<%- include('parts/header') %>
<%- include('parts/navbar') %>

<!-- display cart page -->
<div class="container">
<% if(items.length === 0) { %>
    <p class="alert alert-danger">
        There's No Items To Display
    </p>

<% } else { %>
    <h1 class="text-center mb-4">Your Cart</h1>
    <div class="row">
        
        <table class="m-auto" border="1">
            <thead>
                <th>no</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Total</th>
                <th></th>
            </thead>
            <tbody>
                <% for(let i = 0; i<items.length; i++) { %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= items[i].name %></td>
                        <td><%= items[i].price %></td>
                        <form method="POST">
                            <td><input type="number" name="amount" class="form-control" value="<%= items[i].amount %>"></td>
                            <td><%= items[i].amount * items[i].price %> $</td>
                            <td>
                                <input type="hidden" name="cartId" value="<%= items[i]._id%>">
                                <input type="submit" class="btn btn-success btn-sm" value="Save" formaction="/cart/save">
                                <input type="submit" class="btn btn-danger btn-sm"  value="Delete" formaction="/cart/delete">
                            </td>
                        </form>
                        
                    </tr>
                <% } %>

            </tbody>
        </table>
    </div>
<% } %>

</div>


<%- include('parts/footer') %>